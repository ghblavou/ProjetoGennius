@model IEnumerable<projGennius.Models.ModelLogin>

@{
    ViewBag.Title = "Administradores Cadastrados";
}

<style>
    .button-g {
        color: #fff;
        background-color: #7949EE !important;
        border: none !important;
    }
</style>

<div class="section p-2 border border-black rounded-2 p-2">
    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Nome</th>
                <th>Login</th>
                <th>Status</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">@Html.DisplayFor(modelItem => item.nome)</p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@Html.DisplayFor(modelItem => item.login)</p>
                    </td>
                    <td>
                        <p class="fw-normal mb-1">@Html.DisplayFor(modelItem => item.sta)</p>
                    </td>
                    <td>
                        <div class="d-flex">

                            @Html.HiddenFor(modelItem => item.codUsu)
                            @if (item.sta == "Ativo")
                            {

                                @Html.ActionLink("Desativar", "DesativarPerfil", new { codUsu = item.codUsu }, new { @class = "btn btn-danger float-end ms-1", style = "color:white" })
                            }
                            else
                            {

                                @Html.ActionLink("Ativar", "AtivarPerfil", new { codUsu = item.codUsu }, new { @class = "btn btn-success float-end ms-1", style = "color:white" })
                            }
                            @Html.ActionLink("Perfil", "PerfilUsu", new { id = item.codUsu }, new { @class = "btn button-g ms-1", style = "color:white" })

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br>
