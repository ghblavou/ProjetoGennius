@model projGennius.Models.ModelLogin

@{
    ViewBag.Title = "Entrar";
    Layout = "";
}

<!doctype html>
<html lang="pt-br">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background: #7949EE; min-height: 100vh">

    <nav class="navbar navbar-white bg-white rounded-bottom" style="min-height: 60px;">

        <a class="m-auto" href="@Url.Action("Index", "Home")">
            <img src="~/Imagens/whitemode.png" style="max-height: 25px;" alt="Imagem da logotipo da Gennius" />
        </a>

    </nav>


    <section class="container body-content p-5 rounded-4 col-sm-5 col-10" style="background-color: #fff; margin-top: 15vh;">

        <div class="conteiner p-3 text-center text-danger">
            @ViewBag.confHome
            @ViewBag.msgLogar
            @ViewBag.msgDesativado
        </div>

        <div class="d-flex justify-content-center align-items-center" style="height: 100%;">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {

                <h2>Entrar</h2>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>


                        <div class="form-group">
                            @Html.LabelFor(model => model.login, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.login, new { htmlAttributes = new { id = "txtlogin", senha = "txtUsuario", type = "text", @class = "form-control", placeholder = "Digite seu Login", required = "required", maxlength = "30" } })
                                @Html.ValidationMessageFor(x => x.login, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i style="font-size:20px;" class="fas fa-envelope"></i></span>

                        <div class="form-group">
                            @Html.LabelFor(model => model.senha, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(x => x.senha, new { htmlAttributes = new { id = "txtSenha", senha = "txtSenha", type = "password", @class = "form-control", placeholder = "Digite sua senha", required = "required", maxlength = "10" } })
                                @Html.ValidationMessageFor(x => x.senha, "", new { @class = "text-danger" })

                            </div>
                        </div>


                    </div>
                </div>
                <br />
                <div>
                    @Html.ActionLink("Cadastre-se", "tipoUsu", "Home", new { area = "" }, new { @class = "pe-2" })
                    <input type="submit" style="color: white; background-color: #5CE1E6; border: none;" class="button button-a button-lg button-rounded rounded-3 p-2" value="Entrar" />
                </div>
                <br />
                <br />
            }
        </div>




    </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>